<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NoteController" spacing="10" alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
    <children>
        <TextField fx:id="titleField" promptText="Title" />
        <TextArea fx:id="contentArea" promptText="Content" />
        <Button fx:id="addButton" text="Add" />
        <VBox fx:id="notesContainer" spacing="5" />
    </children>
</VBox>